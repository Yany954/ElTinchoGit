<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center"
    android:background="@color/primaryColor"

    tools:context=".views.ui.activities.RegistroActivity">

    <ImageView
        android:layout_width="248dp"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:layout_marginRight="20dp"
        app:srcCompat="@mipmap/ic_banner_foreground_tincho" />

    <LinearLayout
        android:layout_width="348dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/style_fondo">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="sans-serif-black"
            android:text="Registráte"
            android:layout_gravity="center"
            android:textColor="@color/secondaryColor"
            android:textSize="30dp" />

            <EditText
                android:id="@+id/signUpName"
                android:layout_width="308dp"
                android:layout_height="50dp"
                android:textSize="20dp"
                android:background="@drawable/stylo_borde_editext"
                android:hint="Nombre Completo"
                android:fontFamily="@font/opensanslight"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:inputType="text"
                />
            <EditText
                android:id="@+id/signUpPhone"
                android:layout_width="308dp"
                android:layout_height="50dp"
                android:textSize="20dp"
                android:background="@drawable/stylo_borde_editext"
                android:hint="Número Celular"
                android:fontFamily="@font/opensanslight"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:inputType="phone"
                />

            <EditText
                android:id="@+id/signUpEmail"
                android:layout_width="308dp"
                android:layout_height="50dp"
                android:textSize="20dp"
                android:background="@drawable/stylo_borde_editext"
                android:hint="Correo electronico"
                android:fontFamily="@font/opensanslight"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:inputType="textEmailAddress"
                />

            <EditText
                android:id="@+id/signUpPassword"
                android:layout_width="308dp"
                android:layout_height="50dp"
                android:textSize="20dp"
                android:background="@drawable/stylo_borde_editext"
                android:hint="Contraseña"
                android:fontFamily="@font/opensanslight"
                android:padding="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:inputType="textPassword"
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="142dp"
                android:layout_height="59dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:text="Registrar"
                android:textSize="18dp"
                android:textColor="@color/primaryTextColor"
                android:background="@drawable/stylo_borde_boton"
                android:id="@+id/registro"/>
            <Button
                android:layout_width="142dp"
                android:layout_height="59dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="200dp"
                android:text="LogIn"
                android:textSize="18dp"
                android:textColor="@color/primaryTextColor"
                android:background="@drawable/stylo_borde_boton"
                android:id="@+id/loginRegistro"/>
        </RelativeLayout>

</LinearLayout>