<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_gravity="center"
    android:background="@color/primaryColor"

    tools:context=".views.ui.activities.LoginActivity">

    <ImageView
        android:layout_width="276dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:scaleType="fitXY"
        app:srcCompat="@mipmap/ic_banner_foreground_tincho" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/style_fondo">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="sans-serif-black"
            android:text="Iniciá Sesión"
            android:layout_gravity="center"
            android:textColor="@color/secondaryColor"
            android:textSize="30dp" />
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="sans-serif-black"
            android:textSize="20dp"
            android:text="Email"
            android:layout_gravity="left"
            android:textColor="@color/secondaryColor"/>

        <EditText
            android:id="@+id/loginEmail"
            android:layout_width="308dp"
            android:layout_height="50dp"
            android:background="@drawable/stylo_borde_editext"
            android:fontFamily="@font/opensanslight"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:hint="usuario@ejemplo.com"
            android:textSize="20dp" />
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="20dp"
            android:fontFamily="sans-serif-black"
            android:text="Contraseña"
            android:layout_gravity="left"
            android:textColor="@color/secondaryColor"/>

        <EditText
            android:id="@+id/loginPassword"
            android:layout_width="308dp"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:textSize="20dp"
            android:hint="Contraseña"
            android:fontFamily="@font/opensanslight"
            android:background="@drawable/stylo_borde_editext"
            android:padding="10dp"
            android:inputType="textPassword" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/BotonInicio"
            android:layout_width="142dp"
            android:layout_height="59dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/stylo_borde_boton"
            android:text="Entrar"
            android:textColor="#000000"
            android:textSize="18dp" />
        <Button
            android:id="@+id/masterKey"
            android:layout_width="142dp"
            android:layout_height="59dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="200dp"
            android:background="@drawable/stylo_borde_boton"
            android:text="TEST"
            android:textColor="#000000"
            android:textSize="18dp" />
    </RelativeLayout>

    <Button
        android:id="@+id/signInGoogle"
        android:layout_width="142dp"
        android:layout_height="59dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:background="@drawable/stylo_borde_boton"
        android:text="Google"
        android:textColor="#000000"
        android:textSize="18dp" />

    <LinearLayout
        android:layout_width="397dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        tools:context=".views.ui.activities.MainActivity">


        <TextView
            android:id="@+id/BotonRecuperar"
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_margin="10dp"
            android:fontFamily="sans-serif-black"
            android:text=" Recuperar constraseña"
            android:textColor="@color/secondaryColor"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/BotonRegistroLogin"
            android:layout_width="151dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-black"
            android:paddingLeft="40dp"
            android:text="Registráte"
            android:textColor="@color/secondaryColor"
            android:textSize="20dp" />
    </LinearLayout>
</LinearLayout>