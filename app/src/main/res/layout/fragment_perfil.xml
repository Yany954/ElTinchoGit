<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.ui.Fragments.perfilFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/primaryColor">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/fondo_tincho_background"
            android:id="@+id/actionbartoolbar"
            app:menu="@menu/menu_navigation_toolbar"
            tools:ignore="MissingConstraints">
            <ImageView
                android:id="@+id/fotoperfil"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="left"
                android:src="@mipmap/icono_toolbar_tincho"/>

        </androidx.appcompat.widget.Toolbar>

            <ImageView
                android:id="@+id/fotoperfilgeneral"
                android:layout_width="213dp"
                android:layout_height="204dp"
                android:layout_gravity="center"
                android:layout_marginTop="70dp"
                android:src="@mipmap/perfil_menu"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/btncamara"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/secondaryColor"
                    android:src="@drawable/icon_camera"
                    tools:ignore="SpeakableTextPresentCheck" />

                <ImageButton
                    android:id="@+id/btngaleria"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginLeft="255dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/secondaryColor"
                    android:src="@drawable/icon_galeria"
                    tools:ignore="SpeakableTextPresentCheck" />
            </RelativeLayout>

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="278dp"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="348dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@drawable/style_fondo"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Nombre Completo"
                    android:textColor="@color/secondaryDarkColor"
                    android:textSize="23dp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/nombrecompleto"
                        android:layout_width="246dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/stylo_borde_editext"
                        android:inputType="none"
                        android:text="Nombre"
                        android:textIsSelectable="false" />

                    <ImageButton
                        android:id="@+id/nombreedit"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginLeft="275dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/stylo_borde_boton"
                        android:src="@drawable/icon_edit"
                        tools:ignore="SpeakableTextPresentCheck" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="Email"
                    android:textColor="@color/secondaryDarkColor"
                    android:textSize="23dp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/correoelectronico"
                        android:layout_width="246dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/stylo_borde_editext"
                        android:fontFamily="sans-serif-light"
                        android:inputType="none"
                        android:text="ejemplo@gmail.com"
                        android:textIsSelectable="false" />

                    <ImageButton
                        android:id="@+id/correoedit"
                        android:layout_width="48dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="275dp"
                        android:layout_marginTop="9dp"
                        android:background="@drawable/stylo_borde_boton"
                        android:src="@drawable/icon_edit"
                        tools:ignore="SpeakableTextPresentCheck" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="Celular"
                    android:textColor="@color/secondaryDarkColor"
                    android:textSize="23dp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/celularcompleto"
                        android:layout_width="246dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="50dp"
                        android:background="@drawable/stylo_borde_editext"
                        android:fontFamily="sans-serif-light"
                        android:inputType="none"
                        android:text="+57 317 4750 12 34"
                        android:textIsSelectable="false" />

                    <ImageButton
                        android:id="@+id/celularedit"
                        android:layout_width="48dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="275dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/stylo_borde_boton"
                        android:src="@drawable/icon_edit"
                        tools:ignore="SpeakableTextPresentCheck" />
                </RelativeLayout>

            </LinearLayout>
        </ScrollView>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/buttonNavigationMenu"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/fondo_tincho_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/menu_navigation_bar"
            tools:ignore="MissingConstraints">

        </com.google.android.material.bottomnavigation.BottomNavigationView>
    </LinearLayout>

</FrameLayout>