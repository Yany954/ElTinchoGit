<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.ui.Fragments.ayudaFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/primaryColor">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/fondo_tincho_background"
            android:id="@+id/actionbartoolbar"
            app:menu="@menu/menu_navigation_toolbar"
            tools:ignore="MissingConstraints">
        <ImageView
            android:id="@+id/fotoperfil"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="left"
            android:src="@mipmap/icono_toolbar_tincho"/>
        </androidx.appcompat.widget.Toolbar>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/theme_gradients_background">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="110dp"
                android:layout_alignParentRight="true"
                app:srcCompat="@mipmap/ayuda_menu"
                android:layout_marginRight="30dp">

            </ImageView>

            <TextView
                android:layout_width="200dp"
                android:layout_height="115dp"
                android:gravity="center"
                android:text="Ayuda"
                android:textColor="@color/secondaryColor"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="9dp"
                android:layout_marginEnd="81dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="348dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/style_fondo"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="@color/secondaryDarkColor"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:paddingVertical="5dp"
                android:text="eltinchoparrillargentina@gmail.com"
                android:textColor="@color/primaryLightColor"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Mas informaciÃ³n"
                android:textColor="@color/secondaryDarkColor"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="5dp"
                android:text="https://goo.gl/maps/RJSGkT1iKoMXeXXA9"
                android:textColor="@color/el_tincho_sinfondo_background"
                android:textSize="16sp" />

        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <ImageView
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="40dp"
                android:src="@mipmap/foto_tincho" />

            <ImageView
                android:layout_width="281dp"
                android:layout_height="117dp"
                android:layout_marginLeft="190dp"
                android:layout_marginTop="50dp"
                android:src="@mipmap/comida_tincho_foreground" />
        </RelativeLayout>
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/buttonNavigationMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:background="@color/fondo_tincho_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/menu_navigation_bar"
            tools:ignore="MissingConstraints">

        </com.google.android.material.bottomnavigation.BottomNavigationView>
    </LinearLayout>
</FrameLayout>