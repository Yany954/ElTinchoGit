<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center"
    android:background="@color/primaryColor"

    tools:context=".views.ui.activities.RecuperarActivity">

    <ImageView
        android:layout_width="276dp"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:layout_marginRight="20dp"
        app:srcCompat="@mipmap/ic_banner_foreground_tincho" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/style_fondo"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="sans-serif-black"
            android:text="Recuperá la contraseña"
            android:textColor="@color/secondaryColor"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/correoRestaurar"
            android:layout_width="308dp"
            android:layout_gravity="center"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/stylo_borde_editext"
            android:fontFamily="@font/opensanslight"
            android:hint="Correo electronico"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textSize="20dp" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/Restaurarboton"
            android:layout_width="142dp"
            android:layout_height="59dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="160dp"
            android:background="@drawable/stylo_borde_boton"
            android:text="Recuperar"
            android:textColor="#F6F1F0"
            android:textSize="20dp" />
        <Button
            android:id="@+id/loginRecuperar"
            android:layout_width="142dp"
            android:layout_height="59dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/stylo_borde_boton"
            android:text="LogIn"
            android:textColor="#F6F1F0"
            android:textSize="20dp" />
    </RelativeLayout>
</LinearLayout>